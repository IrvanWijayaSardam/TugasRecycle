<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#DFDDDD">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintInside"
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="600dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="@id/constraintInside"
            app:layout_constraintStart_toStartOf="@id/constraintInside"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="20dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#D1CACA">
            <androidx.cardview.widget.CardView
                android:id="@+id/cVCostOf"
                android:layout_marginTop="50dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="25dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="Pilih Provinsi"
                    android:background="@color/white"
                    />
            </androidx.cardview.widget.CardView>
            <HorizontalScrollView
                android:background="#CAC2C2"
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvSumatra"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        >
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pulau Sumatra"
                            android:layout_gravity="center"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvKalimantan"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        >
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pulau Kalimantan"
                            android:layout_gravity="center"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvJawa"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        >
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pulau Jawa"
                            android:layout_gravity="center"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvNusa"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        >
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pulau Nusa Tenggara &amp; Bali"
                            android:layout_gravity="center"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvSulawesi"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        >
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pulau Sulawesi"
                            android:layout_gravity="center"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvMaluku"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        >
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pulau Maluku"
                            android:layout_gravity="center"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvPapua"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        >
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Papua"
                            android:layout_gravity="center"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </HorizontalScrollView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleMain"
            android:layout_marginTop="210dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>